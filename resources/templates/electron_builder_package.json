{
  "name": "%packageName%",
  "version": "%version%",
  "buildVersion": "%version%",
  "private": true,
  "license": "PROPRIETARY",
  "build": {
    "appId": "%appId%",
    "linux": {
      "target": ["AppImage"]
    },
    "mac": {
      "icon": "app/img/icon.icns",
      "target": ["zip","dmg"]
    },
    "win": {
      "icon": "app/img/icon.ico",
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    },
    "appImage": {
      "category": "Network"
    },
    "publish": [{
        "provider": "generic",
        "url": "%updateCheckUrl%",
        "channel": "latest"
      }
    ]
  },
  "scripts": {
    "start": "electron ./app/ --enable-logging",
    "postinstall": "electron-builder install-app-deps",
    "win-dist": "electron-builder build -w --x64",
    "mac-dist": "electron-builder build -m --x64 --arm64",
    "linux-dist": "electron-builder build -l --x64",
    "all-dist": "electron-builder build -lmw --x64"
  },
  "devDependencies": {
    "electron": "15.3.2",
    "electron-builder": "22.13.1",
    "electron-store": "^8.0.1",
    "electron-context-menu": "^3.1.1",
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9"
  }
}
